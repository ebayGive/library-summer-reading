<div class="hero-unit">
  <h2 class="name"><%= userType.name %></h2>
  <%- linkTo('Edit this userType', editUserTypePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', userTypePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>UserType Properties</h2>
<% for(var i in userType) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= userType[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>