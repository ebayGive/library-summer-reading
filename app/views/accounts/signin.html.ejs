<div class="row">
  <div class="col-md-12"><br/><br><br/><br/><br/><br><br/><br/></div>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
      <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Sign In</h3>
          </div>
          <div class="panel-body">
            <form role="form" method="post" action="/accounts/signin">
              <% if(typeof flash.error() != 'undefined') { %>
                <div class="row">
                    <span class="text text-danger">&nbsp;&nbsp; <%=flash.error()%></span>
                </div>
              <% } %>
              <div class="form-group">
                  <label for="accountName">User Name / Phone</label>
                  <%- contentTag('input', params['accountName'], {name: 'accountName', id: 'accountName', class: 'form-control', placeholder: 'User Name / Phone'});%>
              </div>
              <div class="form-group">
                  <label for="accountName">PIN (4 digits)</label>
                  <%- contentTag('input', params['passcode'], {name: 'passcode', id: 'passcode', type: 'password', class: 'form-control', placeholder: '4 digit pin'});%>
              </div>
              <div class="form-group">
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Sign&nbsp;In</button>
                    <a href="/accounts/register" class="btn btn-default" alt="First time users, Click here to register">Register</a>
                 </div>
              </div>
            </form>
          </div>
      </div>
   </div>
  <div class="col-md-4"></div>
</div>
