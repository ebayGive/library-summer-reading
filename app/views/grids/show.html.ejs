<div class="hero-unit">
  <h2 class="id"><%= grid.id %></h2>
  <%- linkTo('Edit this grid', editGridPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', gridPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Grid Properties</h2>
<% for(var i in grid) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= grid[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>